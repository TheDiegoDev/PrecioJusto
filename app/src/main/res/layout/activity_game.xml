    <!--        android:fontFamily="@font/creepster"-->
    <!--        android:ems="10"-->
    <!--        android:hint="@string/editTextPrice"-->
    <!--        android:inputType="numberDecimal"-->
    <!--        android:textColor="#000000"-->
