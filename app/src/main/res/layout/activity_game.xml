    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toBottomOf="@+id/textDescripcion" />-->


    <ImageView
        android:id="@+id/imageNext"
        android:layout_width="173dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/chipGroup"
        app:srcCompat="@mipmap/enter" />

    <TextView
        android:id="@+id/textNameObject"
        android:layout_width="254dp"
        android:layout_height="38dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/textDescripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageObject" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="123dp"
        android:layout_height="113dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPoints"
        android:layout_width="183dp"
        android:layout_height="84dp"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/contador"
        android:textColor="@color/green"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textCountDown"
        android:layout_width="153dp"
        android:layout_height="82dp"
        android:fontFamily="@font/creepster"
        android:gravity="center"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDescripcion"
        app:singleSelection="true">


        <com.google.android.material.chip.Chip
            android:id="@+id/chipPriceOne"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/black"
            android:button="@android:drawable/divider_horizontal_bright"
            android:textAlignment="center"
            app:chipBackgroundColor="@drawable/chip_selection"
            app:chipStrokeColor="@color/green"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPriceTwo"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/black"
            android:button="@android:drawable/divider_horizontal_bright"
            android:textAlignment="center"
            app:chipBackgroundColor="@drawable/chip_selection"
            app:chipStrokeColor="@color/green"
            app:chipStrokeWidth="1dp" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPriceThree"
            style="@style/Widget.MaterialComponents.Chip.Choice"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@color/black"
            android:button="@android:drawable/divider_horizontal_bright"
            android:textAlignment="center"
            app:chipBackgroundColor="@drawable/chip_selection"
            app:chipStrokeColor="@color/green"
            app:chipStrokeWidth="1dp" />
    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>